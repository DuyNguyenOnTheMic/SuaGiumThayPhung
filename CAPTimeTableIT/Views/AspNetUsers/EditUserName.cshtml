@model CAPTimeTableIT.Models.Users.UserModel

@{
    ViewBag.Title = "Cập Nhập Hồ Sơ Người Dùng";
    var users = ViewBag.Users as SelectList;
    string userId = ViewBag.UserId;
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href=@Url.Action("Index", "Home")>Trang chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Cập nhập hồ sơ người dùng</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>


            <div class="card-box mb-30">
                <div class="pd-20">
                    <div class="pb-20">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group">
                                    @*@Html.LabelFor(m => m.FullName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                    <label class="col-sm-12 col-md-2 col-form-label">Tên giảng viên</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-12 col-md-2 col-form-label">Mã CBGD</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.StaffCode, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.StaffCode, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Lưu" class="btn btn-outline-success" /> |
                                        @Html.ActionLink("Quay lại", "UserName")

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!--Validate remote StaffCode-->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
