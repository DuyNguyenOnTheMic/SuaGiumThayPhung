@model CAPTimeTableIT.Models.Subject.SubjectPostModel

@{
    ViewBag.Title = "Chỉnh sửa môn học";
}

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href=@Url.Action("EditSubject", "Subject")>Chỉnh sửa môn học</a></li>
                                @*<li class="breadcrumb-item active" aria-current="page">Chỉnh sửa Học kì</li>*@
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
               
                <div class="pd-20 bg-white border-radius-4 box-shadow mb-30">
                    <h4 class="text-blue h4">Chỉnh sửa môn học</h4>
                     @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Mã môn học:</label>
                        <div class="col-sm-12 col-md-3">
                            @Html.TextBoxFor(m => m.SubjectCode, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Tên môn học: </label>
                        <div class="col-sm-12 col-md-3">
                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Môn học", @class = "form-control" })
                            @Html.ValidationMessageFor(t => t.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-12 col-md-2 col-form-label">Mô tả: </label>
                        <div class="col-sm-12 col-md-3">
                            @Html.TextAreaFor(m => m.Description, new { placeholder = "Mô tả", @class = "form-control" })
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-outline-success" onclick="return confirm('Bạn có muốn lưu?')">Lưu</button>
                        <a href="@Url.Action("Index", "Subject")" type="button" style="float: right" class="btn btn-outline-danger" onclick="return confirm('Bạn có muốn hủy?')">Hủy</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}